{
  "name": "currency-flags",
  "version": "0.1.0",
  "description": "Flags for currency codes.",
  "files": [
    "dist/currency-flags.css",
    "dist/currency-flags.min.css"
  ],
  "scripts": {
    "start": "npm run build --silent",
    "build": "npm run minify-images && npm run create-sprite && npm run minify-css && rm -rf build && echo 'Done.'",
	"minify-images": "imagemin src/flags/* build",
    "create-sprite": "sprity create 'dist' 'build/*.png' --style 'currency-flags.css' --margin 0 --base64 --prefix 'currency-flag'",
    "minify-css": "cleancss -o dist/currency-flags.min.css dist/currency-flags.css"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/transferwise/currency-flags.git"
  },
  "author": "oliverviljamaa",
  "license": "MIT",
  "devDependencies": {
    "clean-css": "^3.4.12",
    "imagemin-cli": "^2.1.0",
    "sprity-cli": "^1.0.1"
  }
}
